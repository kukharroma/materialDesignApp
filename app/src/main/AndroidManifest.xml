<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.materialdesignapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">


        <activity android:name=".view.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activities.collapsingToolbar.CollapsingToolbarLayoutActivity1">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activities.MainActivity" />
        </activity>
        <activity android:name=".view.activities.collapsingToolbar.CollapsingToolbarLayoutActivity2">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activities.MainActivity" />
        </activity>
        <activity android:name=".view.activities.collapsingToolbar.CollapsingToolbarLayoutActivity3">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activities.MainActivity" />
        </activity>
        <activity android:name=".view.activities.collapsingToolbarFB.CollapsingToolbarLayoutFBActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activities.MainActivity" />
        </activity>
    </application>


</manifest>
